with "gnatcoll";

project gnatcoll_db2ada is

   Version := External ("GNATCOLL_VERSION", "0.0");
   Name    := "gnatcoll_db2ada";

   type Build_Type is ("DEBUG", "PROD");
   Build : Build_Type := External ("BUILD");

   type Yes_No is ("yes", "no");
   Templates : Yes_No := External ("TEMPLATES", "no");

   for Languages use ("Ada");

   for Main use ("gnatcoll_db2ada");

   case Templates is
      when "no" =>
         for Source_Dirs use Project'Source_Dirs & ("notemplates");
      when "yes" =>
         for Source_Dirs use Project'Source_Dirs & ("templates");
   end case;

   package Compiler is
      case Build is
         when "DEBUG" =>
            for Switches ("Ada") use
              ("-g", "-O0", "-gnata", "-gnatVa", "-gnatQ", "-gnaty", "-gnateE",
               "-gnatwaCJe", "-fstack-check");

         when "PROD" =>
            --  Do not use -gnatwe for production mode
            for Switches ("Ada") use ("-O2", "-gnatn", "-gnatwaCJ");
      end case;
   end Compiler;

   package Binder is
      case Build is
         when "DEBUG" =>
            for Switches ("Ada") use ("-E", "-shared");
         when "PROD" =>
            for Switches ("Ada") use ("-shared");
      end case;
   end Binder;

   package Builder is
      case Build is
         when "DEBUG" =>
            for Global_Configuration_Pragmas use "../gnat_debug.adc";
         when "PROD" =>
            null;
      end case;
   end Builder;

   package Ide is
      for VCS_Kind use "Git";
   end Ide;

end gnatcoll_db2ada;
