with "../gnatcoll_db_shared.gpr";
with "gnatcoll";
with "gnatcoll_sql";

library project GnatColl_Postgres is

   Version := External ("GNATCOLL_POSTGRES_VERSION",
                        Gnatcoll_Db_Shared.Gnatcoll_Version);
   Name    := "gnatcoll_postgres";

   Library_Type : Gnatcoll_Db_Shared.Library_Type_Type
     := Gnatcoll_Db_Shared.Library_Type;

   for Library_Kind    use Library_Type;
   for Source_Dirs     use (".");
   for Object_Dir      use "obj/" & Project'Library_Kind;
   for Library_Dir     use "lib/" & Project'Library_Kind;
   for Library_Name    use Name;
   for Library_Version use "lib" & Name & Gnatcoll.So_Ext & "." & Version;

   case Library_Type is
      when "relocatable" =>
         for Library_Options use ("-lpq");
         for Library_Interface use
           ("gnatcoll.sql.postgres", "gnatcoll.sql.ranges");
         for Leading_Library_Options use Gnatcoll_Db_Shared.Ldflags;
      when others =>
         null;
   end case;

   for Languages use ("Ada", "C");

   type Yes_No is ("yes", "no");
   Has_PQP : Yes_No := External ("GNATCOLL_HASPQPREPARE", "yes");

   package Compiler extends Gnatcoll_Db_Shared.Compiler is
      case Has_PQP is
         when "yes" =>
            for Switches ("C") use
               Gnatcoll_Db_Shared.Cflags_Mode & "-DHAS_PQPREPARE"
               & Gnatcoll_Db_Shared.Cflags & Gnatcoll_Db_Shared.Cppflags;
         when "no" =>
            null;
      end case;
   end Compiler;

   package Binder renames Gnatcoll_Db_Shared.Binder;

   package Builder renames Gnatcoll_Db_Shared.Builder;

   package Ide renames Gnatcoll_Db_Shared.Ide;

   package Linker is
      for Linker_Options use ("-lpq");
   end Linker;

end GnatColl_Postgres;
